@model HospitalManagement.BusinessLayer.DTOs.PatientInfoDTO

<div class="modal-dialog  modal-md">
    <div class="modal-content">
        <div class="modal-header">
            <label style="font-size:medium;"><b>PatientDetail Entry</b></label>
            <span class="close" id="closeMember" data-dismiss="modal" aria-hidden="true">&times;</span>
        </div>
        <form id="CreateOutletform">
            <div class="modal-body">
                <div asp-validation-summary="ModelOnly" class="alert badge-danger"></div>
                
                <div class="row">
                    <div class="form-group col-md-12">
                        <input type="hidden" asp-for="PatientId" value="@Model.PatientId" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label>FirstName </label>
                        <input type="text" class="form-control required" asp-for="FirstName" value="@Model.FirstName" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label>LastName</label>
                        <input type="text" class="form-control" asp-for="LastName" value="@Model.LastName" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" value="@Model.Email" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label>Gender</label>
                        <select asp-for="Gender" class="form-control">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label>Contact No</label>
                        <input type="number" class="form-control" asp-for="PhoneNumber" value="@Model.PhoneNumber" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label>DOB</label>
                        <input type="date" class="form-control" asp-for="DateOfBirth" value="@Model.DateOfBirth" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-12">
                        <label>Medical Records</label>
                        <input type="text" class="form-control" asp-for="MedicalRecords" value="@Model.MedicalRecords" />
                    </div>
                </div>
            </div>
           
                <div class="modal-footer">
                    <button type="button" id="SubmitButton" value="Save" class="btn btn-primary" onclick="savePatientInfo();">Save</button>
                    <a data-dismiss="modal" class="btn  btn-default">Back</a>
                </div>

        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/stock.js"></script>
<script src="~/js/patientinfo.js"></script>

